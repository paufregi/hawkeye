---
apiVersion: v1
kind: Service
metadata:
  name: hawkeye-arrrow-svc
  namespace: mm-shark
  labels:
    name: hawkeye-arrrow-svc
spec:
  ports:
    - port: 80
      targetPort: http
  selector:
    name: hawkeye-arrrow-svc
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: hawkeye-arrrow-svc
  namespace: mm-shark
spec:
  replicas: 2
  template:
    metadata:
      labels:
        name: hawkeye-arrrow-svc
    spec:
      containers:
      - name: hawkeye-arrrow-svc
        image: 191213556404.dkr.ecr.us-east-1.amazonaws.com/hackeye-arrrow:${TAG}
        resources:
          requests:
            cpu: 50m
            memory: 800Mi
          limits:
            cpu: 200m
            memory: 2048Mi

        livenessProbe:
          initialDelaySeconds: 90
          timeoutSeconds: 3
          httpGet:
            path: /liveness
            port: 9000

        imagePullPolicy: IfNotPresent

        ports:
          - name: http
            containerPort: 9000
        env:
        - name: APP_VERSION
          value: ${TAG}
